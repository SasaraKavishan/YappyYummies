<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:paddingBottom="200px">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="376dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#E7B82B"
        app:cardCornerRadius="40dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="301dp"
            android:layout_marginBottom="50dp"
            android:background="#FFC107"
            android:paddingBottom="0px">

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="117dp"
                android:layout_height="134dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="52dp"
                android:padding="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/hill_s_science_diet_adult_chicken___barley" />

            <TextView
                android:id="@+id/Name1"
                android:layout_width="237dp"
                android:layout_height="53dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="27dp"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageView10"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/Brand1"
                android:layout_width="268dp"
                android:layout_height="35dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="8dp"
                android:text="Brand"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageView10"
                app:layout_constraintTop_toBottomOf="@+id/Name1" />

            <TextView
                android:id="@+id/Type1"
                android:layout_width="120dp"
                android:layout_height="29dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="8dp"
                android:text="Type"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageView10"
                app:layout_constraintTop_toBottomOf="@+id/Price1" />

            <TextView
                android:id="@+id/Price1"
                android:layout_width="117dp"
                android:layout_height="34dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="8dp"
                android:text="Price"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageView10"
                app:layout_constraintTop_toBottomOf="@+id/Age1" />

            <TextView
                android:id="@+id/Age1"
                android:layout_width="157dp"
                android:layout_height="27dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="8dp"
                android:text="Age "
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageView10"
                app:layout_constraintTop_toBottomOf="@+id/Brand1" />

            <Button
                android:id="@+id/addtocart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/black"
                android:text="Add to Cart"
                app:layout_constraintStart_toStartOf="@+id/Type1"
                app:layout_constraintTop_toBottomOf="@+id/Type1" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>